\DeclareMathOperator{\conv}{conv}
\DeclareMathOperator{\aff}{aff}
\DeclareMathOperator{\eq}{eq} %equality set
\DeclareMathOperator{\rank}{rank}
\DeclareMathOperator{\spn}{span}

