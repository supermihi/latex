%% mh_tikz -- some tikz definitions by Michael Helmling.
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{mh_tikz}
\RequirePackage{tikz}
\usetikzlibrary{positioning}
\tikzset{v/.style={draw,circle,inner sep=.8mm,minimum size=4mm}} % vertex
\tikzset{a/.style={->,sloped}} % arc
\tikzset{e/.style={sloped}} % edge
\tikzset{dot/.style={fill,circle,inner sep=0mm,minimum size=1mm}}
\tikzset{>=stealth} % nicer arrows
\DeclareOption{coloredgraphs}{
  \tikzset{v/.append style={draw=blue!40,thick,fill=blue!8}}
  \tikzset{e/.append style={draw=blue!60,thick}}
}
\ProcessOptions\relax